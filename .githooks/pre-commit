#!/bin/sh
branch="$(git branch --show-current)"

if [ "$branch" = "main" ]; then
  echo ""
  echo "⚠️  JE STAAT OP 'main' (PRODUCTIE)"
  echo ""
  printf "Weet je ZEKER dat je wilt committen op main? Typ exact: JA : "
  read answer

  if [ "$answer" != "JA" ]; then
    echo "❌ Commit afgebroken."
    exit 1
  fi
fi

